<%= form_for(@user, html: {class: "form-horizontal"}) do |user| %>
<%= render partial: 'shared/error', locals:{object: @user} %>



<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= user.label :first_name %>
    </div>
    <div class="col-md-4">
      <%= user.text_field :first_name, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= user.label :last_name %>
    </div>
    <div class="col-md-4">
      <%= user.text_field :last_name, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class= "field">
    <div class="control-label col-md-2">
      <%= user.label :email %>
    </div>
    <div class="col-md-4">
      <%=user.email_field :email, class: "form-control" %>
    </div>
  </div>
</div>

<div class = "form-group">
  <div class= "actions col-md-offset-2 col-md-4">
    <%= user.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", @user, class:"btn btn-default" %>
    <% if @user.id != nil %>
    <%= link_to "Delete", @user, method: :delete, data:{confirm: "Are you sure?"}, class:"btn btn-danger" %>
    <% end %>
  </div>
</div>
<% end %>
