<%= form_for(@user, html: {class: "form-horizontal"}) do |user| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= user.label :first_name %>
    </div>
    <div class="col-md-4">
      <%= user.text_field :first_name, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= user.label :last_name %>
    </div>
    <div class="col-md-4">
      <%= user.text_field :last_name, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class= "field">
    <div class="control-label col-md-2">
      <%= user.label :email %>
    </div>
    <div class="col-md-4">
      <%=user.email_field :email, class: "form-control" %>
    </div>
  </div>
</div>

<div class = "form-group">
  <div class= "actions col-md-offset-2 col-md-4">
    <%= user.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", users_path, class:"btn btn-default" %>


<% end %>
