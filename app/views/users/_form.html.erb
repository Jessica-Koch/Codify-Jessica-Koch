
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |user| %>
    <%= render partial:'shared/errors', locals: {object: @user} %>

    <div class = "form-group">
      <%= user.label :first_name  %>
      <%= user.text_field :first_name, class: 'form-control' %>
    </div>

    <div class = "form-group">
      <%= user.label :last_name %>
      <%= user.text_field :last_name, class: "form-control" %>
    </div>

    <div class ="form-group">
      <%= user.label :email %>
      <%=user.email_field :email, class: "form-control" %>
    </div>

    <div class ="form-group">
      <%= user.label :password %>
      <%= user.password_field :password, class: "form-control" %>
    </div>

    <div class ="form-group">
      <%= user.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", @user, class:"btn btn-default" %>


      <% if @user.id != nil %>
      <%= link_to "Delete", @user, method: :delete, data:{confirm: "Are you sure?"}, class:"btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
