<%= form_for(@project, html: {class: "form-horizontal"}) do |project| %>

<%= render partial:'shared/errors', locals: {object: @project} %>

<div class = "form-group">
  <div class = "field">
    <div class="control-label col-md-2">
      <%= project.label :name %>
    </div>
    <div class="col-md-4">
      <%= project.text_field :name, class:"form-control" %>
    </div>
  </div>
</div>


<div class= "form-group">
  <div class="actions col-md-offset-2 col-md-4">
  <%= project.submit class: "btn btn-primary" %>
  <%= link_to "Cancel", projects_path, class: "btn btn-default" %>
  </div>
</div>

<% end %>
