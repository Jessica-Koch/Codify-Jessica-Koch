<div class= "page-header">
  <div class= "pull-right">
    <%= link_to "New Project", new_project_path, class:"btn btn-info" %>
  </div>

  <h1>Projects</h1>
</div>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Tasks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
    <tr>
      <td><%= link_to project.name, project %></td>
      <td> <%= link_to pluralize(project.tasks.count, 'task'), project_tasks_path(project) %></td>
      <td>

        <div class = "text-right">
          <% if project.users.include?(current_user) && current_user.memberships.find_by(project_id: project).owner? || admin? %>
          <%= link_to 'Edit', edit_project_path(project), class:"btn btn-info" %>
          <% end %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
