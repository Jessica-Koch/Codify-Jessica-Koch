
  <%= form_for [@project, @membership] do |f| %>
    <% if flash.now[:alert] %>
    <% end %>

  <%= render partial: 'shared/errors', locals: {object: @membership} %>

  <div class="well form-inline">
    <div class="form-group">
      <%= f.collection_select :user_id, User.all, :id, :full_name, {include_blank: "Please select user"}, {class:"form-control"} %>
    </div>
    <div class="form-group">
      <%= f.select(:role, [["Owner", :owner],["Member", :member]], {include_blank: false}, {class:"form-control"}) %>
    </div>

    <%= f.submit 'Add New Member', class:"btn btn-info" %>
    <% end %>
  </div>
