<div class = "row">
  <div class ="actions col-md-4 col-md-offset-4">
    <div class = "well">

      <h2>Sign In</h2>
      <%= form_tag login_path do |f| %>
      <% if @login_error %>
      <p>
        <%= @login_error %>
      </p>
      <% end %>

      <div>
        <%= label_tag :email %>
      </div>
      <div>
        <%= email_field_tag :email %>
      </div>

      <div>
        <%= label_tag :password %>
      </div>
      <div>
        <%= password_field_tag :password %>
      </div>

      <div>
        <%= submit_tag "Sign In", class: "btn btn-primary" %>
      </div>
<% end %>
    </div>
  </div>
</div>
