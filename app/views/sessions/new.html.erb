<div class="container">
  <%= form_tag login_path  do |f| %>
  <div class ="col-md-4 col-md-offset-4">
    <div class="well">

      <h2>Sign In</h2>
      
      <% if @sign_in_error %>
      <div class = "alert alert-danger"><%= @sign_in_error %></div>     <% end %>

      <div class = "form-group">
        <div class = "col-md-4">
          <%= label_tag :email %>
        </div>
        <%= email_field_tag :email %>
      </div>

      <div class = "form-group">
        <div class ="col-md-4">
          <%= label_tag :password %>
        </div>
        <%= password_field_tag :password %>
      </div>

      <div class = "form-group">
        <%= submit_tag "Sign In", class:  "btn btn-primary" %>
      </div>

      <% end %>

    </div>
  </div>
</div>
