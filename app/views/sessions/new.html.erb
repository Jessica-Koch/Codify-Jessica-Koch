<div class="row">
  <div class ="col-md-4 col-md-offset-4">
    <div class="well">

<h2>Sign In</h2>

      <%= form_tag login_path  do |f| %>
        <% if @login_error %>
          <p>
            <% @login_error %>
          </p>
          <% end %>
          
      <div class = "form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, class: "form-control" %>
      </div>

      <div class = "form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil,  class: "form-control" %>
      </div>

      <div class = "form-group">
        <%= submit_tag "Sign In", class: "form-control btn btn-primary" %>
      </div>

      <% end %>

    </div>
  </div>
</div>
