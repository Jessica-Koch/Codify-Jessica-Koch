
<div class='page-header'>
  <div class='pull-right'>
    <%= link_to 'New Task', new_project_task_path(@project), class:"btn btn-info" %>
  </div>

<h1> <%= "#{"Tasks for "}#{@project.name}" %></h1>
</div>

<ol class="breadcrumb">
  <li><a href="/projects">Projects</a></li>
  <li><%= link_to @project.name %></li>
  <li class="active">Tasks for <%= @project.name %></li>
</ol>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Due Date</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do |task| %>
    <tr>
        <td><%= task.description %></td>
        <td><%= task.duedate %></td>
        <td><%= task.completed %></td>
        <td>
          <div class='text-right'>
            <%= link_to 'Show', project_task_path(@project, task), class:"btn btn-success" %>
            <%= link_to 'Edit', edit_project_task_path(@project, task), class:"btn btn-info" %>
            <%= link_to 'Delete', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
