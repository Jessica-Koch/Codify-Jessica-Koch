<div class="col-md-offset-3 col-md-9">
  <%= form_for([@project, @task, @comment], html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group">
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Add Comment", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
