
<%= form_for(@task, html: {class: "form-horizontal"}) do |f| %>
<%= render partial:'shared/errors', locals: {object: @task} %>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :description %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :due_date %>
    </div>
    <div class="col-md-4">
      <%= f.date_select :duedate, class:"form-control" %>
    </div>
  </div>
</div>

<% unless @task.new_record? %>
<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :completed %>
    </div>
    <div class="col-md-4">
      <%= f.check_box :completed %>
    </div>
  </div>
</div>
<% end %>

<div class="form-group">
  <div class="actions col-md-offset-2 col-md-4">
    <%= f.submit class:"btn btn-primary" %>
    <%= link_to 'Cancel', tasks_path, class:"btn btn-default" %>
  </div>
</div>

<% end %>
